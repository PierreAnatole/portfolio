<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.collections.FXCollections?>
<?import javafx.collections.ObservableList?>
<?import java.lang.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"  fx:controller="application.ProgramController">
	
	<top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="30" left="40" />
            </padding>

            <children>
                <Label text="name:"></Label>

                <TextField fx:id="textFieldName"></TextField>

                <Button fx:id="buttAdd" text="add" onAction ="#addName"></Button>
                
                <Button fx:id="buttRemove" text="remove" onAction ="#removeName"></Button>
                
                <Button fx:id="buttCross" text="cross" onAction ="#crossName"></Button>
            </children>

        </HBox>
    </top>
    
    <center>
    	<VBox spacing="10">
    	
    		<padding>
    			<Insets top="10" right="20" bottom="30" left="40"/>
    		</padding>
    		
    		<ListView fx:id="listNames">
    			<items>
    				<FXCollections fx:factory="observableArrayList">
    					<String fx:value="Jean1"/>
    					<String fx:value="Jean22"/>
    				</FXCollections>
    			</items>
    		
    		</ListView>
    		
    	</VBox>
    </center>
	
	
</BorderPane>

